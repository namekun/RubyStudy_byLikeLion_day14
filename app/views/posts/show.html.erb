<h1>
  <strong>Title:</strong>
  <%= @post.title %>
</h1>
<hr>
<p>
  <strong>Contents:</strong>
  <%= @post.contents %>
</p>

<p>
  <strong>ImagePath:</strong>
  <img src ="<%= @post.image_path %>" width="100%"/>
</p>
<p>
  <strong>Thumb Fill:</strong>
  <img src ="<%= @post.image_path.thumb_fill.url %>"/>
</p>
<p>
  <strong>Thumb Fit:</strong>
  <img src ="<%= @post.image_path.thumb_fit.url %>"/>
</p>


<%= link_to '수정', edit_post_path(@post), class: 'btn btn-warning text-white'%> 
<%= link_to '목록', cafe_path(@post.daum), class: 'btn btn-info' %> 
<!--cafe_path(@post.daum)는 @post가 속해있는 카페객체가 하나 튀어나오고, 이것을 매개로 사용하면 cafe_path가 몇번인지 알 수 있다 -->
<%= link_to '삭제', posts_path(@post), method: 'DELETE', class: 'btn btn-danger' %>

<hr>

<!-- 댓글 입력 -->
<%= render 'comments/form', post: @post %>

<!-- 댓글 리스트 -->

<table class="table">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Content</th>
      <th scope="col">Button</th>
    </tr>
  </thead>
  <tbody>
    <% @post.comments.each do |comment| %>
    <tr>
      <th scope="row"><%= comment.id %></th>
      <td><%= comment.content %></td>
      <td><%= link_to "삭제", "/comment/#{comment.id}",method: "delete"%></td>
    </tr>
    <% end %>
  </tbody>
</table>